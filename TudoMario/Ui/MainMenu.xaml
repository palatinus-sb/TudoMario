    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:TudoMario.Ui"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

	<Grid HorizontalAlignment="Center" VerticalAlignment="Center" Height="220" Padding="0,50,0,0" RequestedTheme="Default">
