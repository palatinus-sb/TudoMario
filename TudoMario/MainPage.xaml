        <Button Content="Up" Width="100" Height="50" Click="Button_Click" VerticalAlignment="Bottom" Margin="390,0,0,0"></Button>
        <Button Content="Down" Width="100" Height="50" Click="Button_Click" VerticalAlignment="Bottom" Margin="285,0,0,0"></Button>
        <Button Content="pUp" Width="100" Height="50" Click="Button_Click" VerticalAlignment="Bottom" Margin="390,0,0,68"></Button>
        <Button Content="pDown" Width="100" Height="50" Click="Button_Click" VerticalAlignment="Bottom" Margin="285,0,0,68"></Button>
        <Button Content="pLeft" Width="100" Height="50" Click="Button_Click" VerticalAlignment="Bottom" Margin="0,0,0,68"></Button>
        <Button Content="pRight" Width="100" Height="50" Click="Button_Click" VerticalAlignment="Bottom" Margin="105,0,0,68"></Button>
